spring.jaspercloud.db.names=db1,db2

#db1 datasource
spring.jaspercloud.dao.datasource.db1.driverClassName=org.postgresql.Driver
spring.jaspercloud.dao.datasource.db1.url=jdbc:postgresql://127.0.0.1:5432/db1
spring.jaspercloud.dao.datasource.db1.username=postgres
spring.jaspercloud.dao.datasource.db1.password=postgres
spring.jaspercloud.dao.datasource.db1.defaultAutoCommit=false
spring.jaspercloud.dao.datasource.db1.initialSize=10
spring.jaspercloud.dao.datasource.db1.minIdle=10
spring.jaspercloud.dao.datasource.db1.maxActive=50
spring.jaspercloud.dao.datasource.db1.maxWait=60000
spring.jaspercloud.dao.datasource.db1.timeBetweenEvictionRunsMillis=60000
spring.jaspercloud.dao.datasource.db1.minEvictableIdleTimeMillis=300000
spring.jaspercloud.dao.datasource.db1.validationQuery=select 'x'
spring.jaspercloud.dao.datasource.db1.validationQueryTimeout=60
spring.jaspercloud.dao.datasource.db1.testWhileIdle=true
spring.jaspercloud.dao.datasource.db1.testOnBorrow=false
spring.jaspercloud.dao.datasource.db1.testOnReturn=false
spring.jaspercloud.dao.datasource.db1.removeAbandoned=true
spring.jaspercloud.dao.datasource.db1.removeAbandonedTimeout=1800
#db1 mybatis
spring.jaspercloud.mybatis.db1.basePackages=com.jaspercloud.db1.dao.mapper
spring.jaspercloud.mybatis.db1.mapperLocations=classpath:mapper/db1/*.xml

#db2 datasource
